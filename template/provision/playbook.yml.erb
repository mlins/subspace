---
  - hosts: <%= @env %>
    become: yes

    vars_files:
      - ./vars/<%= @env %>.yml

    roles:
      - common
      - yarn
      - nodejs
      - ruby-common
      - rails
      - puma
      - nginx
      - letsencrypt
      - nginx # This is included twice intentionally. I think there is a bug that is fixed by running it both before and after the letsencrypt role.
      - postgresql
      - monit
      - logrotate
      - collectd
      - delayed_job
