---
  - hosts: localhost
    connection: local
    gather_facts: False

    vars_files:
      - vars/aws.yml

    roles:
      - { role: aws, hostname: <%= @hostname %> }

  - hosts: <%= @env %>
    sudo: yes

    vars_files:
      - ./vars/<%= @env %>.yml

    roles:
      - common
      - ruby-common
      - rails
      - apache
      - mtpereira.passenger
      - letsencrypt
      - postgresql
      - delayed_job
